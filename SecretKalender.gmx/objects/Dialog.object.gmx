    var btnY = y2 - btnH - 4;
    var btnB = btnY + btnH;
    draw_set_color(c_red);
    draw_rectangle(btn1x, btnY, btn1r, btnB, false);
    
    //Draw cancel text
    draw_set_color(c_white);
    draw_set_halign(fa_center);
