    //Draw text
    draw_set_colour(c_black);
    draw_text_ext(textX, textY + textLineSpace, text, textLineSpace, textMaxLength);
    
    //Draw emotion
    draw_sprite(avatars[| currentId], emotions[| currentId], frameR, y);
}
